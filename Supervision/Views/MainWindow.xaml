                                Content="Ось" />
                    </TreeViewItem>
                    <TreeViewItem Header="Задвижка шиберная (ЗШ)"
                                  Style="{StaticResource TreeViewItemStandard}"
                                  Margin="2">
                        <Button Style="{StaticResource TreeViewButton}"
                                Command="{Binding RunningSleeveOpen}"
