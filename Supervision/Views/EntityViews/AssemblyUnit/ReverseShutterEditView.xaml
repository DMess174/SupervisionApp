<Window x:Class="Supervision.Views.EntityViews.AssemblyUnit.ReverseShutterEditView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Height="500pt"
      mc:Ignorable="d"
      Style="{StaticResource StandardWindow}"
      d:DesignHeight="1000" d:DesignWidth="1200"
        WindowStartupLocation="CenterScreen"
        Title="{Binding SelectedItem.Name}">
    <Window.Resources>
        <CollectionViewSource x:Key="Inspectors" Source="{Binding Inspectors}"/>
        <CollectionViewSource x:Key="Points" Source="{Binding Points}" />
        <CollectionViewSource x:Key="JournalNumbers" Source="{Binding JournalNumbers}"/>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Content="Характеристики" 
                   VerticalAlignment="Center"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="Номер:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="Чертеж:" 
                               Margin="5 0 5 0" 
                               Grid.Row="1"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBox Style="{StaticResource StandardTextBox}" 
                             Width="auto" 
                             Margin="5 0 5 0" 
                             VerticalAlignment="Center"
                             Text="{Binding SelectedItem.Number, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Drawing, UpdateSourceTrigger=PropertyChanged}" 
                              ItemsSource="{Binding Drawings}" 
                              SelectedItem= "{Binding SelectedItem.Drawing}"/>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="PID:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="Спецификация:" 
                               Margin="5 0 5 0" 
                               Grid.Row="1"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Column="0"
                              Grid.Row="0"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding PIDs}" 
                              SelectedItem= "{Binding SelectedItem.PID}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.PIDId}"
                              DisplayMemberPath="Number"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Column="1"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditPID}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                              Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.PID.Specification.Number, UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                </Grid>

                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="0"
                               Text="Обозначение:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="1"
                               Text="Статус:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                              Grid.Row="0" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.PID.Designation, UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                    
                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Status, UpdateSourceTrigger=PropertyChanged}" 
                              ItemsSource="{Binding Status}" 
                              SelectedItem= "{Binding SelectedItem.Status}">
                        <ComboBoxItem Content="Годен"/>
                        <ComboBoxItem Content="Ремонт"/>
                        <ComboBoxItem Content="Брак"/>
                        <ComboBoxItem Content="Отгружен"/>
                    </ComboBox>
                </Grid>
            </Grid>
        </Grid>

        <Separator Style="{StaticResource HorizontalSeparator}" 
                   Grid.Row="1"/>

        <TabControl Style="{StaticResource StandardTabControl}" 
                    Grid.Row="2"
                    Height="auto" 
                    HorizontalAlignment="Stretch" 
                    MinWidth="500"
                    Width="auto"
                    Margin="5">
            <TabItem Header="Комплектация">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Grid.Row="2"
                           Content="Втулка бронзовая:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="2"
                              Grid.Column="1"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding BronzeSleeves}"
                              SelectedItem="{Binding SelectedBronzeSleeve}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>
                    <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.BronzeSleeveShutters}" 
                              Margin="5"
                              Grid.ColumnSpan="2"
                              Grid.Row="3"
                              Grid.RowSpan="2"
                              SelectedItem="{Binding SelectedBronzeSleeveFromList}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding EditBronzeSleeve}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} - {1}">
                                            <Binding Path="Number"/>
                                            <Binding Path="Status"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="3"
                            Grid.Column="2"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditBronzeSleeve}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="4"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteBronzeSleeveFromShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddBronzeSleeveToShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Separator Style="{StaticResource VerticalSeparator}"
                               Grid.Column="3"
                               Grid.RowSpan="9"/>

                    <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Grid.Row="2"
                           Content="Втулка стальная:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Grid.Column="4"/>
                    <ComboBox Style="{StaticResource StandardComboBox}" 
                           Grid.Row="2"
                              Grid.Column="5"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding SteelSleeves}"
                              SelectedItem="{Binding SelectedSteelSleeve}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>
                    <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.SteelSleeveShutters}" 
                              Margin="5"
                              Grid.Column="4"
                              Grid.ColumnSpan="2"
                              Grid.Row="3"
                              Grid.RowSpan="2"
                              SelectedItem="{Binding SelectedSteelSleeveFromList}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding EditSteelSleeve}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} - {1}">
                                            <Binding Path="Number"/>
                                            <Binding Path="Status"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="3"
                            Grid.Column="6"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditSteelSleeve}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="4"
                            Grid.Column="6"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteSteelSleeveFromShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="2"
                            Grid.Column="6"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddSteelSleeveToShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Separator Style="{StaticResource VerticalSeparator}"
                               Grid.Column="7"
                               Grid.RowSpan="9"/>

                    <Label Style="{StaticResource StandardLabel}" 
                           FontSize="{StaticResource Hi}"
                           Content="Захлопка:" 
                           VerticalAlignment="Center"
                           Grid.Column="4"/>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Column="5"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Slams}" 
                              SelectedItem= "{Binding SelectedItem.SlamShutter}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.SlamShutterId}"
                              DisplayMemberPath="FullName"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Column="6"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditSlamShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Label Style="{StaticResource StandardLabel}" 
                           FontSize="{StaticResource Hi}"
                           Content="Ось:" 
                           VerticalAlignment="Center"
                           Grid.Column="8"/>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Column="9"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Shafts}" 
                              SelectedItem= "{Binding SelectedItem.ShaftShutter}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.ShaftShutterId}"
                              DisplayMemberPath="FullName"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Column="10"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditShaftShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Label Style="{StaticResource StandardLabel}" 
                           FontSize="{StaticResource Hi}"
                           Grid.Column="0"
                           Content="Корпус:" 
                           VerticalAlignment="Center"/>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Column="1"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Cases}" 
                              SelectedItem= "{Binding SelectedItem.ReverseShutterCase}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.ReverseShutterCaseId}"
                              DisplayMemberPath="FullName"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Column="2"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditCase}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Separator Style="{StaticResource HorizontalSeparator}"
                               Grid.Row="1"
                               Grid.ColumnSpan="11"/>

                    <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Content="Заглушка:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="8"/>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                           Grid.Row="2"
                              Grid.Column="9"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Stubs}"
                              SelectedItem="{Binding SelectedStub}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>

                    <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.StubShutters}" 
                              Margin="5"
                              Grid.Column="8"
                              Grid.RowSpan="2"
                              Grid.ColumnSpan="2"
                              Grid.Row="3"
                              SelectedItem="{Binding SelectedStubFromList}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding EditStub}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} - {1}">
                                            <Binding Path="Number"/>
                                            <Binding Path="Status"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="3"
                            Grid.Column="10"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditStub}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="4"
                            Grid.Column="10"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteStubFromShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="2"
                            Grid.Column="10"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddStubToShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Separator Style="{StaticResource HorizontalSeparator}"
                               Grid.Row="5"
                               Grid.ColumnSpan="11"/>

                    <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Content="Материалы АКП:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Grid.Row="6"
                           Grid.Column="0"/>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                           Grid.Row="6"
                              Grid.Column="1"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding AnticorrosiveMaterials}"
                              SelectedItem="{Binding SelectedMaterial}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>

                    <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.ReverseShutterWithCoatings}" 
                              Margin="5"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Grid.RowSpan="2"
                              Grid.Row="7"
                              SelectedItem="{Binding SelectedMaterialFromList}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding EditMaterial}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} - {1} - {2}">
                                            <Binding Path="Name"/>
                                            <Binding Path="Number"/>
                                            <Binding Path="Status"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="7"
                            Grid.Column="2"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditMaterial}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="8"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteMaterialFromShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>

                    <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="6"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddMaterialToShutter}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
                </Grid>
            </TabItem>

            <TabItem Header="Операции">
                <TabControl Style="{StaticResource StandardTabControl}">
                    <TabItem Header="Сборка">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <DataGrid Style="{StaticResource StandardDataGrid}"
                              Grid.Column="0" 
                              MinRowHeight="50"
                              ItemsSource="{Binding AssemblyJournal}"
                              IsReadOnly="False"
                              HorizontalScrollBarVisibility="Visible">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Дата"
                                        MinWidth="100"
                                        Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DatePicker Style="{StaticResource StandardDatepicker}" VerticalAlignment="Stretch" 
                                        SelectedDate="{Binding Path = Date, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn 
                                Header="Пункт"
                                MinWidth="70"
                                Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Point}"
                                           FontSize="{StaticResource Hi}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Операция" 
                                    Width="250">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Path = Description, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     VerticalAlignment="Center"
                                     MinLines="3"
                                     MaxLines="50"
                                     SpellCheck.IsEnabled="True"
                                     Language="ru-ru"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn 
                    Header="Инженер"
                    MinWidth="120"
                    Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox  VerticalContentAlignment="Center"
                                       IsEditable="True"
                                       ItemsSource="{Binding Path=DataContext.Inspectors, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                       SelectedValuePath="Id"
                                       SelectedValue="{Binding Path=InspectorId, UpdateSourceTrigger=PropertyChanged}"
                                       DisplayMemberPath="FullName">
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn
                                        Header="Статус" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox 
                                      Height="50" 
                                      IsEditable="True"
                                      SelectedItem="{Binding Status}"
                                      SelectedValue= "{Binding Path=Status, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Content">
                                                    <ComboBoxItem Content="Соответствует"/>
                                                    <ComboBoxItem Content="Не соответствует"/>
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Замечание&#x0a;   выдано"
                                        Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Path=RemarkIssued, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     VerticalAlignment="Center"
                                     MinLines="3"
                                     MaxLines="50"
                                     SpellCheck.IsEnabled="True"
                                     Language="ru-ru"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Замечание&#x0a;   закрыто"
                                        Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Path=RemarkClosed, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     VerticalAlignment="Center"
                                     MinLines="3"
                                     MaxLines="50"
                                     SpellCheck.IsEnabled="True"
                                     Language="ru-ru"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Номер журнала" 
                                        MinWidth="100"
                                        Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox Height="50" 
                                      IsEditable="True"
                                      VerticalContentAlignment="Center" 
                                      HorizontalContentAlignment="Center"
                                      ItemsSource="{Binding Path=DataContext.JournalNumbers, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                      SelectedValue="{Binding Path=JournalNumber, UpdateSourceTrigger=PropertyChanged}">
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
