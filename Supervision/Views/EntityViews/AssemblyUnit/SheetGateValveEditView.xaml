<Window x:Class="Supervision.Views.EntityViews.AssemblyUnit.SheetGateValveEditView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:wpfx="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        Height="500pt"
      mc:Ignorable="d"
      Style="{StaticResource StandardWindow}"
      d:DesignHeight="1000" d:DesignWidth="1200"
        WindowStartupLocation="CenterScreen"
        Title="Редактирование ЗШЛ">
    <Window.Resources>
        <CollectionViewSource x:Key="Inspectors" Source="{Binding Inspectors}"/>
        <CollectionViewSource x:Key="Points" Source="{Binding Points}" />
        <CollectionViewSource x:Key="JournalNumbers" Source="{Binding JournalNumbers}"/>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Content="Характеристики" 
                   VerticalAlignment="Center"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="Номер:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="Чертеж:" 
                               Margin="5 0 5 0" 
                               Grid.Row="1"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBox Style="{StaticResource StandardTextBox}" 
                             Width="auto" 
                             Margin="5 0 5 0" 
                             VerticalAlignment="Center"
                             Text="{Binding SelectedItem.Number, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Drawing, UpdateSourceTrigger=PropertyChanged}" 
                              ItemsSource="{Binding Drawings}" 
                              SelectedItem= "{Binding SelectedItem.Drawing}"/>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="PID:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="Спецификация:" 
                               Margin="5 0 5 0" 
                               Grid.Row="1"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Column="0"
                              Grid.Row="0"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding PIDs}" 
                              SelectedItem= "{Binding SelectedItem.PID}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.PIDId}"
                              DisplayMemberPath="Number"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Column="1"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditPIDCommand}"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                              Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.PID.Specification.Number, UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                </Grid>

                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="0"
                               Text="Обозначение:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="1"
                               Text="Статус:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                              Grid.Row="0" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.PID.Designation, UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                    
                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Status, UpdateSourceTrigger=PropertyChanged}" 
                              ItemsSource="{Binding Status}" 
                              SelectedItem= "{Binding SelectedItem.Status}">
                        <ComboBoxItem Content="Годен"/>
                        <ComboBoxItem Content="Ремонт"/>
                        <ComboBoxItem Content="Брак"/>
                        <ComboBoxItem Content="Отгружен"/>
                    </ComboBox>
                </Grid>
            </Grid>
        </Grid>

        <Separator Style="{StaticResource HorizontalSeparator}" 
                   Grid.Row="1"/>

        <TabControl Style="{StaticResource StandardTabControl}" 
                    Grid.Row="2"
                    Height="auto" 
                    HorizontalAlignment="Stretch" 
                    MinWidth="500"
                    Width="auto"
                    Margin="5">
            <TabItem Header="Комплектация">
                <TabControl>
                    <TabItem Header="Основные детали">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Grid.Row="2"
                           Content="Седло:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                            <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="2"
                              Grid.Column="1"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Saddles}"
                              SelectedItem="{Binding SelectedSaddle}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>
                            <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.Saddles}" 
                              Margin="5"
                              Grid.ColumnSpan="2"
                                      Height="auto"
                                      MinHeight="80"
                                      MaxHeight="180"
                                      VerticalAlignment="Top"
                                      VerticalContentAlignment="Top"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Grid.Row="3"
                              Grid.RowSpan="2"
                              SelectedItem="{Binding SelectedSaddleFromList}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding EditSaddleCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} - {1}">
                                                    <Binding Path="Number"/>
                                                    <Binding Path="Status"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="3" Grid.Column="2"
                                        VerticalAlignment="Top">
                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="3"
                            Grid.Column="2"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditSaddleCommand}"/>

                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="4"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteSaddleFromValveCommand}"/>
                            </StackPanel>

                            <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddSaddleToValveCommand}"/>

                            <Separator Style="{StaticResource VerticalSeparator}"
                               Grid.Column="3"
                               Grid.RowSpan="6"/>

                            <Label Style="{StaticResource StandardLabel}" 
                                   FontSize="{StaticResource Hi}"
                                   Content="Шпиндель:" 
                                   VerticalAlignment="Center"
                                   Grid.Column="4"
                                   Grid.Row="2"/>

                            <TextBlock Style="{StaticResource StandardTextBlock}" 
                                       Grid.Column="5"
                                       Grid.Row="2"
                                       Height="25"
                                       Margin="5 0 5 0" 
                                       VerticalAlignment="Center" 
                                       Text="{Binding SelectedItem.WeldGateValveCover.Spindle.FullName}"/>

                            <Button Style="{StaticResource StandardButton}"
                                    Grid.Column="6"
                                    Grid.Row="2"
                                    Height="30"
                                    Margin="5 0 5 0"
                                    Content="Открыть"
                                    Command="{Binding EditSpindleCommand}"/>

                            <Separator Style="{StaticResource VerticalSeparator}"
                               Grid.Column="7"
                               Grid.RowSpan="9"/>

                            <Label Style="{StaticResource StandardLabel}" 
                           FontSize="{StaticResource Hi}"
                           Content="Крышка:" 
                           VerticalAlignment="Center"
                           Grid.Column="4"/>

                            <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Column="5"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Covers}" 
                              SelectedItem= "{Binding SelectedItem.WeldGateValveCover}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.WeldGateValveCoverId}"
                              DisplayMemberPath="FullName"/>

                            <Button Style="{StaticResource StandardButton}"
                            Grid.Column="6"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditCoverCommand}"/>

                            <Label Style="{StaticResource StandardLabel}" 
                           FontSize="{StaticResource Hi}"
                           Content="Шибер:" 
                           VerticalAlignment="Center"
                           Grid.Column="8"/>

                            <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Column="9"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Gates}" 
                              SelectedItem= "{Binding SelectedItem.Gate}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.GateId}"
                              DisplayMemberPath="FullName"/>

                            <Button Style="{StaticResource StandardButton}"
                            Grid.Column="10"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditGateCommand}"/>

                            <Label Style="{StaticResource StandardLabel}" 
                           FontSize="{StaticResource Hi}"
                           Grid.Column="0"
                           Content="Корпус:" 
                           VerticalAlignment="Center"/>

                            <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Column="1"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Cases}" 
                              SelectedItem= "{Binding SelectedItem.WeldGateValveCase}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.WeldGateValveCaseId}"
                              DisplayMemberPath="FullName"/>

                            <Button Style="{StaticResource StandardButton}"
                            Grid.Column="2"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditCaseCommand}"/>

                            <Separator Style="{StaticResource HorizontalSeparator}"
                               Grid.Row="1"
                               Grid.ColumnSpan="11"/>

                            <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Content="Штифт срезной:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="8"/>

                            <ComboBox Style="{StaticResource StandardComboBox}" 
                           Grid.Row="2"
                              Grid.Column="9"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding ShearPins}"
                              SelectedItem="{Binding SelectedShearPin}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>

                            <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.ShearPins}" 
                              Margin="5"
                              Grid.Column="8"
                              Grid.RowSpan="2"
                              Grid.ColumnSpan="2"
                              Height="auto"
                                      MinHeight="80"
                                      MaxHeight="180"
                                      VerticalAlignment="Top"
                                      VerticalContentAlignment="Top"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Grid.Row="3"
                              SelectedItem="{Binding SelectedShearPinFromList}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding EditShearPinCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} - {1}">
                                                    <Binding Path="Number"/>
                                                    <Binding Path="Status"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="3" Grid.Column="10"
                                        VerticalAlignment="Top">
                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="3"
                            Grid.Column="10"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditShearPinCommand}"/>

                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="4"
                            Grid.Column="10"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteShearPinFromValveCommand}"/>
                            </StackPanel>

                            <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="2"
                            Grid.Column="10"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddShearPinToValveCommand}"/>

                            <Separator Style="{StaticResource HorizontalSeparator}"
                                       Grid.Row="4"
                                       Grid.ColumnSpan="11"/>
                        </Grid>
                    </TabItem>
                    
                    <TabItem Header="Крепеж, пружины, краны, уплотнения, ответные фланцы">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Grid.Row="0"
                           Content="Шпилька:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                            <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="0"
                              Grid.Column="1"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding ScrewStuds}"
                              SelectedItem="{Binding SelectedScrewStud}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>
                            <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.BaseValveWithScrewStuds}" 
                              Margin="5"
                              Grid.ColumnSpan="2"
                              Grid.Row="1"
                              Height="auto"
                              MinHeight="80"
                              MaxHeight="180"
                              VerticalAlignment="Top"
                              VerticalContentAlignment="Top"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Grid.RowSpan="2"
                              SelectedItem="{Binding SelectedScrewStudFromList}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding EditScrewStudCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} - {1} шт. - {2}">
                                                    <Binding Path="ScrewStud.Number"/>
                                                    <Binding Path="ScrewStudAmount"/>
                                                    <Binding Path="ScrewStud.Status"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="2" VerticalAlignment="Top">
                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="1"
                            Grid.Column="2"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditScrewStudCommand}"/>

                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteScrewStudFromValveCommand}"/>
                            </StackPanel>

                            <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddScrewStudToValveCommand}"/>

                            <Separator Style="{StaticResource VerticalSeparator}"
                                       Grid.Column="3"
                                       Grid.RowSpan="9"/>

                            <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Grid.Row="0"
                                   Grid.Column="4"
                           Content="Гайка:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                            <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="0"
                              Grid.Column="5"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding ScrewNuts}"
                              SelectedItem="{Binding SelectedScrewNut}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>
                            <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.BaseValveWithScrewNuts}" 
                              Margin="5"
                                      Grid.Column="4"
                              Grid.ColumnSpan="2"
                              Height="auto"
                                      MinHeight="80"
                                      MaxHeight="180"
                                      VerticalAlignment="Top"
                                      VerticalContentAlignment="Top"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Grid.Row="1"
                              Grid.RowSpan="2"
                              SelectedItem="{Binding SelectedScrewNutFromList}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding EditScrewNutCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} - {1} шт. - {2}">
                                                    <Binding Path="ScrewNut.Number"/>
                                                    <Binding Path="ScrewNutAmount"/>
                                                    <Binding Path="ScrewNut.Status"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="6" VerticalAlignment="Top">
                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="1"
                            Grid.Column="6"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditScrewNutCommand}"/>

                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="2"
                            Grid.Column="6"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteScrewNutFromValveCommand}"/>
                            </StackPanel>

                            <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="0"
                            Grid.Column="6"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddScrewNutToValveCommand}"/>

                            <Separator Style="{StaticResource VerticalSeparator}"
                                       Grid.Column="7"
                                       Grid.RowSpan="9"/>
                            
                            <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Grid.Row="0"
                                   Grid.Column="8"
                           Content="Пружина:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                            <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="0"
                              Grid.Column="9"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Springs}"
                              SelectedItem="{Binding SelectedSpring}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>
                            <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.BaseValveWithSprings}" 
                              Margin="5"
                              Height="auto"
                                      MinHeight="80"
                                      MaxHeight="180"
                                      VerticalAlignment="Top"
                                      VerticalContentAlignment="Top"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      Grid.Column="8"
                              Grid.ColumnSpan="2"
                              Grid.Row="1"
                              Grid.RowSpan="2"
                              SelectedItem="{Binding SelectedSpringFromList}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding EditSpringCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} - {1} шт. - {2}">
                                                    <Binding Path="Spring.Number"/>
                                                    <Binding Path="SpringAmount"/>
                                                    <Binding Path="Spring.Status"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="10" VerticalAlignment="Top">
                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="1"
                            Grid.Column="10"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditSpringCommand}"/>

                                <Button Style="{StaticResource StandardButton}"
                            Grid.Row="2"
                            Grid.Column="10"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteSpringFromValveCommand}"/>
                            </StackPanel>

                            <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="0"
                            Grid.Column="10"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddSpringToValveCommand}"/>

                            <Separator Style="{StaticResource HorizontalSeparator}"
                                       Grid.Row="3"
                                       Grid.ColumnSpan="11"/>

                            <Separator Style="{StaticResource HorizontalSeparator}"
